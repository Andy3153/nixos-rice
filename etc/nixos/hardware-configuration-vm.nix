    };

    "/var/log" =
    {
      device = "/dev/disk/by-label/nixvm";
      fsType = "btrfs";
      depends = [ "/" ];
      options = [ "subvol=/var-log" ];
    };

    "/var/tmp" =
    {
      device = "/dev/disk/by-label/nixvm";
      fsType = "btrfs";
      depends = [ "/" ];
      options = [ "subvol=/var-tmp" ];
    };

    "/var/lib/libvirt/images" =
    {
      device = "/dev/disk/by-label/nixvm";
