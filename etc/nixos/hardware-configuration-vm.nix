  boot.initrd.luks.devices."nixvm-crypt".device = "/dev/disk/by-partlabel/nixvm-crypt";

  fileSystems =
  {
    "/" =
    {
      device  = "/dev/disk/by-label/nixvm";
      fsType  = "btrfs";
      options = [ "subvol=/root" ];
    };

    "/boot" =
    {
      device  = "/dev/disk/by-label/ESP";
