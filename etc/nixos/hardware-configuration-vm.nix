    {
      device = "/dev/disk/by-label/nixvm";
      fsType = "btrfs";
      depends = [ "/" "/home" ];
      options = [ "subvol=/torrents" ];
    };
  };

  swapDevices = [ { device = "/.swap/swapfile"; } ];
