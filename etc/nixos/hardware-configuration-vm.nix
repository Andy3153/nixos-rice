    {
      device = "/dev/disk/by-label/nixvm";
      fsType = "btrfs";
      depends = [ "/" ];
      options = [ "subvol=/" ];
    };

    "/nix" =
    {
      device = "/dev/disk/by-label/nixvm";
      fsType = "btrfs";
      depends = [ "/" ];
      options = [ "subvol=/nix" ];
    };

    "/home" =
    {
      device = "/dev/disk/by-label/nixvm";
      fsType = "btrfs";
      depends = [ "/" ];
      options = [ "subvol=/home" ];
    };

    "/.swap" =
    {
      device = "/dev/disk/by-label/nixvm";
      fsType = "btrfs";
      depends = [ "/" ];
      options = [ "subvol=/swap" ];
    };

    "/.snapshots" =
    {
      device = "/dev/disk/by-label/nixvm";
